<script>

    $(document).ready(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

        $('#example2 , #example3 , #example4').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });


    });

    function openDeleteCourtModel(ID) {

        $("#deleteModel button:nth-of-type(2)").attr("id", ID);
        $("#deleteCourtModal").modal("toggle");

    }

    function deleteCourtModal(ID) {
        $.ajax({
            type: "GET",
            url: '../Admin/CourtDelete',
            cache: false,
            data: { "id": ID },
            dataType: "json",
            async: true,
            success: function (res) {
                if (res == "true") {
                    $.confirm({
                        title: "Bilgilendirme ",
                        content: "Kullanıcı Başarılı Şekilde Silindi.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });

                    $("#court_" + ID).empty();

                }
                else {
                    $("#deleteCourtModal").modal("toggle");
                    $.confirm({
                        title: "Uyarı",
                        content: "Kortta kayıtlı rezervasyonlar mevcut. Yine de silmek istiyor musunuz?",
                        buttons: {
                            SİL: function () {
                                forceDelete(ID);
                            },
                            İPTAL: function () {

                            }
                        }
                    });
                }

            },
            error: function (textStatus, errorThrown) {
                console.log(JSON.stringify(textStatus));
                console.log(textStatus);
            }
        });
    }

    function forceDelete(ID) {
        $.ajax({
            type: "GET",
            url: '../Admin/CourtForceDelete',
            cache: false,
            data: { "id": ID },
            dataType: "json",
            async: true,
            success: function (res) {

                debugger;

                if (res == "true") {
                    $.confirm({
                        title: "Bilgilendirme ",
                        content: "Kullanıcı Başarılı Şekilde Silindi.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });

                    $("#court_" + ID).empty();

                }
                else {
                    $.confirm({
                        title: "Uyarı",
                        content: "İşlem sırasında hata oluştu. Lütfen daha sonra tekrar deneyiniz.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });
                }
            },
            error: function (textStatus, errorThrown) {
                console.log(JSON.stringify(textStatus));
                console.log(textStatus);
            }
        });
    }

    function openUpdateCourtModel(ID) {
        $.ajax({
            type: "GET",
            url: '../Admin/GetCourtInf',
            cache: false,
            data: { "id": ID },
            dataType: "json",
            async: true,
            success: function (res) {



                if (res != null) {

                    $("#name").val(res.courtName);
                    $("#type").val(res.courtType);
                    $("#condition").val(res.courtConditions);
                    $("#webcondition").val(res.courtWebConditions);
                    $("#updateModel button:nth-of-type(2)").attr("id", ID);
                    $('#updateCourtModalLong').modal('toggle');
                }

                else {
                    $.confirm({
                        title: "Uyarı",
                        content: "Kullanıcı Bulunamadı.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });
                }

            },
            error: function (textStatus, errorThrown) {
                console.log(JSON.stringify(textStatus));
                console.log(textStatus);
            }
        });
    }

    function updateCourtInf(id) {

        $.ajax({
            type: "POST",
            url: '../Admin/UpdateCourtInf',
            cache: false,
            data: { "id": id, "courtName": $("#name").val(), "courtType": $("#type").val(), "courtConditions": $("#condition").val(), "courtWebConditions": $("#webcondition").val() },
            dataType: "json",
            async: true,
            success: function (res) {

                if (res !=null) {

                    $.confirm({
                        title: "Bilgilendirme",
                        content: "Kullanıcı başarıyla güncellendi.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });

                    window.location.href="CourtSettings"
                  
                }

                else {
                    $.confirm({
                        title: "Uyarı",
                        content: "Kullanıcı Bulunamadı.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });
                }

            },
            error: function (textStatus, errorThrown) {
                console.log(JSON.stringify(textStatus));
                console.log(textStatus);
            }
        });
    }

    function addCourt() {
        if ($("#court_name").val() == "" || $("#court_type").val() == "" || $("#court_condition").val() == "" || $("#court_webcondition").val() == "") {
            $.confirm({
                title: "Bilgilendirme",
                content: "Lütfen Kort Bilgilerini Eksizsiz Doldurunuz.",
                buttons: {
                    TAMAM: function () {

                    }
                }
            });
        } else {
            $("#addCourt").modal("toggle");
            $.ajax({
                type: "POST",
                url: '../Admin/addCourt',
                cache: false,
                data: { "courtName": $("#court_name").val(), "courtType": $("#court_type").val(), "courtConditions": $("#court_condition").val(), "courtWebConditions": $("#court_webcondition").val() },
