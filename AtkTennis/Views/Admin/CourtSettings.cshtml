<script>
    function openUpdateCourtModel(ID) {
        $.ajax({
            type: "GET",
            url: '../Admin/GetCourtInf',
            cache: false,
            data: { "id": ID },
            dataType: "json",
            async: true,
            success: function (res) {



                if (res != null) {

                    $("#name").val(res.courtName);
                    $("#type").val(res.courtType);
                    $("#condition").val(res.courtConditions);
                    $("#webcondition").val(res.courtWebConditions);
                    $("#updateModel button:nth-of-type(2)").attr("id", ID);
                    $('#updateCourtModalLong').modal('toggle');
                }

                else {
                    $.confirm({
                        title: "Uyarı",
                        content: "Kullanıcı Bulunamadı.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });
                }

            },
            error: function (textStatus, errorThrown) {
                console.log(JSON.stringify(textStatus));
                console.log(textStatus);
            }
        });
    }
</script>


 
