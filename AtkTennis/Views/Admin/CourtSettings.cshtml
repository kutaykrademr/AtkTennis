                async: true,
                success: function (res) {

                    if (res == "true") {

                        $.confirm({
                            title: "Bilgilendirme",
                            content: "Kort başarıyla eklendi.",
                            buttons: {
                                TAMAM: function () {

                                }
                            }
                        });

                        window.location.href = "CourtSettings"

                    }
                    else {
                        $.confirm({
                            title: "Uyarı",
                            content: "Kayıt sırasında bir hata oluştu.Lütfen daha sonra tekrar deneyiniz.",
                            buttons: {
                                TAMAM: function () {

                                }
                            }
                        });
                    }

