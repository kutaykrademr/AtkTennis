<script>

    $(document).ready(function () {
        $("#example1").DataTable({
            "responsive": true, "lengthChange": false, "autoWidth": false,
            "buttons": ["copy", "csv", "excel", "pdf", "print", "colvis"]
        }).buttons().container().appendTo('#example1_wrapper .col-md-6:eq(0)');

        $('#example2 , #example3 , #example4').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": false,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
        });


    });


    function saveAddCourt() {



        if ($("#courtName").val() == "" || $("#courtType").val() == "" || $("#AddcourtCondition option:selected").val() == "" || $("#AddcourtWebCondition option:selected").val() == "") {
            $.confirm({
                title: "Bilgilendirme",
                content: "Lütfen Kort Bilgilerini Eksizsiz Doldurunuz.",
                buttons: {
                    TAMAM: function () {

                    }
                }
            });
        } else {

            $("#addCourt").modal("toggle");

            var AddcourtCondition = $("#AddcourtCondition option:selected").val();
            var AddcourtWebCondition = $("#AddcourtWebCondition option:selected").val();

            $.ajax({
                type: "POST",
                url: '../SystemSettings/AddNewCourt',
                cache: false,
                data: { "courtName": $("#courtName").val(), "courtType": $("#courtType").val(), AddcourtCondition, AddcourtWebCondition },
                dataType: "json",
                async: true,
                success: function (res) {


                    if (res == true) {

                        $.confirm({
                            title: "Bilgilendirme",
                            content: "Kort başarıyla eklendi.",
                            buttons: {
                                TAMAM: function () {

                                    window.location.href = "CourtSettings"
                                }
                            }
                        });


                    }
                    else {
                        $.confirm({
                            title: "Uyarı",
                            content: "Kayıt sırasında bir hata oluştu. Lütfen Kontrol edip daha sonra tekrar deneyiniz.",
                            buttons: {
                                TAMAM: function () {

                                }
                            }
                        });
                    }

                },
                error: function (textStatus, errorThrown) {
                    console.log(JSON.stringify(textStatus));
                    console.log(textStatus);
                }
            });
        }

    }

    function openUpdateCourtModal(ID) {
        $.ajax({
            type: "GET",
            url: '../SystemSettings/GetCourtInf',
            cache: false,
            data: { "id": ID },
            dataType: "json",
            async: true,
            success: function (res) {



                if (res != null) {

                    $("#name").val(res.courtName);
                    $("#type").val(res.courtType);
                    $("#courtCondition option:selected").text(res.courtConditions);
                    $("#courtWebCondition option:selected").text(res.courtWebConditions);
                    $("#updateModel button:nth-of-type(2)").attr("id", ID);
                    $('#updateCourtModalLong').modal('toggle');
                }

                else {
                    $.confirm({
                        title: "Uyarı",
                        content: "Kort Bulunamadı.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });
                }

            },
            error: function (textStatus, errorThrown) {
                console.log(JSON.stringify(textStatus));
                console.log(textStatus);
            }
        });
    }

    function updateCourt(id) {

        var courtCondition = $("#courtCondition option:selected").val();
        var courtWebCondition = $("#courtWebCondition option:selected").val();

        $.ajax({
            type: "POST",
            url: '../SystemSettings/UpdateCourt',
            cache: false,
            data: { "id": id, "courtName": $("#name").val(), "courtType": $("#type").val(), courtCondition, courtWebCondition },
            dataType: "json",
            async: true,
            success: function (res) {

                if (res != null) {

                    $.confirm({
                        title: "Bilgilendirme",
                        content: "Kort başarıyla güncellendi.",
                        buttons: {
                            TAMAM: function () {

                                window.location.href = "CourtSettings"
                            }
                        }
                    });



                }

                else {
                    $.confirm({
                        title: "Uyarı",
                        content: "Kort Bulunamadı.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });
                }

            },
            error: function (textStatus, errorThrown) {
                console.log(JSON.stringify(textStatus));
                console.log(textStatus);
            }
        });
    }

    function deleteCourt(id) {

        $.ajax({
            type: "POST",
            url: '../SystemSettings/DeleteCourt',
            cache: false,
            data: { "id": id },
            dataType: "json",
            async: true,
            success: function (res) {

                if (res != null) {

                    $.confirm({
                        title: "Bilgilendirme",
                        content: "Kort başarıyla silindi.",
                        buttons: {
                            TAMAM: function () {

                                window.location.href = "CourtSettings"
                            }
                        }
                    });



                }

                else {
                    $.confirm({
                        title: "Uyarı",
                        content: "Bir Hata Oluştu.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });
                }

            },
            error: function (textStatus, errorThrown) {
                console.log(JSON.stringify(textStatus));
                console.log(textStatus);
            }
        });
    }

    function deleteOpenCourtModal(id) {

        $("#deleteOperateModel button:nth-of-type(2)").attr("id", id);
        $("#openDeleteCourtModal").modal("toggle");

    }

    function openUpdateCourtPriceModal(ID) {
        $.ajax({
            type: "GET",
            url: '../SystemSettings/GetCourtPriceInf',
            cache: false,
            data: { "id": ID },
            dataType: "json",
            async: true,
            success: function (res) {



                if (res != null) {

                    $("#courtPriceName").val(res.name);
                    $("#price").val(res.courtPrice);
                    $("#priceType option:selected").text(res.priceType);
                    $("#recipeType").val(res.recipeType);
                    $("#conditions option:selected").text(res.condition);
                    $("#updateCourtPriceModel button:nth-of-type(2)").attr("id", ID);
                    $('#updatePriceModalLong').modal('toggle');
                }

                else {
                    $.confirm({
                        title: "Uyarı",
                        content: "Kort Bulunamadı.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });
                }

            },
            error: function (textStatus, errorThrown) {
                console.log(JSON.stringify(textStatus));
                console.log(textStatus);
            }
        });
    }

    function updateCourtPriceList(id) {

        var priceType = $("#priceType option:selected").val();
        var condition = $("#conditions option:selected").val();

        $.ajax({
            type: "POST",
            url: '../SystemSettings/UpdateCourtPriceList',
            cache: false,
            data: { "id": id, "name": $("#courtPriceName").val(), "courtPrice": $("#price").val(), priceType, "recipeType": $("#recipeType").val(), condition },
            dataType: "json",
            async: true,
            success: function (res) {



                if (res != null) {

                    $.confirm({
                        title: "Bilgilendirme",
                        content: "Tarife başarıyla güncellendi.",
                        buttons: {
                            TAMAM: function () {

                                window.location.href = "CourtSettings"
                            }
                        }
                    });



                }

                else {
                    $.confirm({
                        title: "Uyarı",
                        content: "Tarife Bulunamadı.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });
                }

            },
            error: function (textStatus, errorThrown) {
                console.log(JSON.stringify(textStatus));
                console.log(textStatus);
            }
        });
    }

    function deleteCourtPrice(id) {

        $.ajax({
            type: "POST",
            url: '../SystemSettings/DeleteCourtPrice',
            cache: false,
            data: { "id": id },
            dataType: "json",
            async: true,
            success: function (res) {

                if (res != null) {

                    $.confirm({
                        title: "Bilgilendirme",
                        content: "Tarife başarıyla silindi.",
                        buttons: {
                            TAMAM: function () {

                                window.location.href = "CourtSettings"
                            }
                        }
                    });



                }

                else {
                    $.confirm({
                        title: "Uyarı",
                        content: "Kullanıcı Bulunamadı.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });
                }

            },
            error: function (textStatus, errorThrown) {
                console.log(JSON.stringify(textStatus));
                console.log(textStatus);
            }
        });
    }

    function saveAddCourtPrice() {

        $.ajax({
            type: "POST",
            url: '../SystemSettings/AddNewCourtPriceList',
            cache: false,
            data: { "recipeName": $("#recipeName").val(), "recipePrice": $("#recipePrice").val(), "recipePriceType": $("#recipePriceType").val(), "courtRecipeType": $("#courtRecipeType").val(), "recipeCondition": $("#recipeCondition").val() },
            dataType: "json",
            async: true,
            success: function (res) {



                if (res == true) {

                    $.confirm({
                        title: "Bilgilendirme",
                        content: "Tarife başarıyla eklendi.",
                        buttons: {
                            TAMAM: function () {

                                window.location.href = "CourtSettings"
                            }
                        }
                    });


                }
                else {
                    $.confirm({
                        title: "Uyarı",
                        content: "Kayıt sırasında bir hata oluştu. Lütfen Kontrol edip daha sonra tekrar deneyiniz.",
                        buttons: {
                            TAMAM: function () {

                            }
                        }
                    });
                }

            },
            error: function (textStatus, errorThrown) {
                console.log(JSON.stringify(textStatus));
                console.log(textStatus);
            }
        });
    }

    function deleteOpenCourtPriceModal(id) {

        $("#deleteOperationModel button:nth-of-type(2)").attr("id", id);
        $("#openDeleteCourtPriceModal").modal("toggle");

    }



</script>

