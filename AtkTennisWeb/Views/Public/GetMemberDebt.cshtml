@model List<Helpers.Dto.ViewDtos.MemberDuesInfTableDto>;

<style>
    button {
        border: none !important;
    }
</style>

@{
    Layout = "_MemberLayout";
}

<div class="content-wrapper">
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card" style="margin-top:15px">
                        <div class="card-header d-flex justify-content-between">
                            <div class="card-title">
                                <h3>Aidat  Borçları</h3>
                            </div>
                        </div>
                        <div class="card-body">
                            <table id="example2" class="table table-bordered table-hover">
                                <thead>
                                    <tr style="text-align:center">


                                        <th>Adı</th>
                                        <th>Borçlandırma Tarihi</th>
                                        <th>Ücreti</th>
                                        <th>Ödenen</th>
                                        <th>Kalan</th>
                                        <th>Aidat Türü</th>
                                        <th>Aidat Yılı</th>
                                        <th>Açıklama</th>
                                        <th>Borç Durumu</th>
                                        <th>İşlemler</th>


                                    </tr>
                                </thead>
                                <tbody>

                                    @foreach (var item in Model)
                                    {

                                        <tr style="text-align:center" id="">

                                            <td>@item.MemberFullName</td>
                                            <td>@item.Date</td>
                                            <td>@item.DuesPrice</td>
                                            <td>@item.PaidPrice</td>
                                            <td>@item.RemainingPrice</td>
                                            <td>@item.DuesType</td>
                                            <td>@item.DuesYear</td>
                                            <td>@item.Explain</td>

                                            @if (@item.PriceCondition)
                                            {
                                                <td>Ödendi</td>
                                            }
                                            else
                                            {
                                                <td>Ödenmedi</td>
                                            }

                                            <td><button class="btn btn-outline-dark"><i class="fas fa-wallet"></i></button></td>

                                        </tr>
                                    }




                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </section>
</div>

<script>
    $(document).ready(function () {

        $('#example2').DataTable({
            "paging": true,
            "lengthChange": false,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "responsive": true,
            "pageLength": 15,
            "buttons": ["print"]
        })
            .buttons().container().appendTo('#example2_wrapper .col-md-6:eq(0)');
    });
</script>
