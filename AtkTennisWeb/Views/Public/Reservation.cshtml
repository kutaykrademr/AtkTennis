    function getCourtTime() {

        var dt = new Date();
        var time = dt.getHours() + ":" + dt.getMinutes();
        

        var days = new Date($('#dateInf').val());
        var getday = days.getDay();


        var dd = String(dt.getDate()).padStart(2, '0');
        var mm = String(dt.getMonth() + 1).padStart(2, '0');
        var yyyy = dt.getFullYear();

        var today = yyyy + '-' + mm + '-' + dd;

        var courtInf = $("#selectCourt option:selected").text();
        var date = $("#dateInf").val();

        if ($("#dateInf").val() < today) {

            $.confirm({
                title: "Uyarı",
                content: "Önceki Günlere Rezervasyon Yapamazsınız.",
                buttons: {
                    TAMAM: function () {

                        $("#dateInf").val(today)
                    }
                }
            });
        }

        else {

            $.ajax({
                type: "POST",
                url: '../Public/GetResTime',
                cache: false,
                data: { "dateInf": $("#dateInf").val(), courtInf, "timeMin": $("#resTimeMin").val() },
                dataType: "json",
                async: false,
                success: function (res) {

                    if (res == false) {

                        $.confirm({
                            title: "Bilgilendirme",
                            content: "Lütfen Kort Bilgisi ve/veya Tarih Giriniz.",
                            buttons: {
                                TAMAM: function () {

                                }
                            }
                        });
                    }


                    switch (getday) {
                        case 0:
                            day = "Pazar";
                            break;
                        case 1:
                            day = "Pazartesi";
                            break;
                        case 2:
                            day = "Salı";
                            break;
                        case 3:
                            day = "Çarşamba";
                            break;
                        case 4:
                            day = "Perşembe";
                            break;
                        case 5:
                            day = "Cuma";
                            break;
                        case 6:
                            day = "Cumartesi";
                    }

                    $("#CourtandTime").empty();
                    row = "";
                    row += '<div class="modal-header" style="background-color: #004e6c;">';
                    row += '<h4 style=" margin:auto; color:white"><i class="fas fa-flag nav-icon"></i>' + ' ' + courtInf + ' ' + ' - ' + ' ' + date + ' ' + ' - ' + ' ' + day + ' ' + ':' + ' ' + '</h4>';
                    row += '</div>';
                    $("#CourtandTime").append(row);


                    if (res.length > 0) {

                        var timeMin = $("#resTimeMin").val();

                        if (timeMin == "60" || timeMin == "30" || timeMin == "15" ) {

                            $("#ResModal").empty();

                            for (var i = 0; i < res.length; i++) {

                                NewRow = "";
                                NewRow += '<div class="form-group">';
                                NewRow += '<div class="custom-control custom-checkbox" id="checkTimeTable">';

                                if (res[i].isTaken == true)

                                    NewRow += '<input class="custom-control-input custom-control-input-primary custom-control-input-outline" type="checkbox" id="customCheckbox5" checked="" disabled="">';

                                else if (res[i].start <= time && date == today)

                                    NewRow += '<input class="custom-control-input custom-control-input-primary custom-control-input-outline" type="checkbox" id="customCheckbox5" checked="" disabled="">';
                               
                                else

                                    NewRow += '<input class="custom-control-input custom-control-input-danger" type="checkbox" id= "t_' + res[i].timeId + '" name= "' + res[i].start + '">';
                                NewRow += '<label for="t_' + res[i].timeId + '" class="custom-control-label">' + res[i].start + '</label>';
                                NewRow += '</div></div>';


                                $("#ResModal").append(NewRow);

                            }
                        }

                        else

                            $.confirm({
                                title: "Uyarı  ",
                                content: "Rezervasyon Ayarlarını Gözden Geçiriniz , Minimum Zaman Dilimi (Dakika)(15,30,60)",
                                buttons: {
                                    TAMAM: function () {

                                    }
                                }
                            });
                    }
                },


                error: function (textStatus, errorThrown) {
                    console.log(JSON.stringify(textStatus));
                    console.log(textStatus);
                }
            });
        }

    }

    function Approve() {

        var timeMin = $("#resTimeMin").val();

        // seçilen saatler
        var times = [];
        $('#checkTimeTable input:checked:not(:disabled)').each(function () {
            times.push(this.name);
        });

        //saat
        var dt = new Date();
        var time = dt.getHours() + ":" + dt.getMinutes() + ":" + dt.getSeconds();

        //CourtId
        var id = $("#selectCourt option:selected").val();

        //bitiş tarihine 15,30,60 dk ekle
        // Bir saatlik
        var resSetTime = $('#doRes').attr('setTime');

        if (resSetTime == 60) {
            function addMinutes(time, minsToAdd) {
                function D(J) { return (J < 10 ? '0' : '') + J; };
                var piece = time.split(':');
                var mins = piece[0] * 60 + +piece[1] + +minsToAdd;

                return D(mins % (24 * 60) / 60 | 0) + ':' + D(mins % 60);
            }

            if (timeMin == 15 && times.length < 5) {
                var finishTime = times[3];
                var resFinishTime = addMinutes(finishTime, '15');
            }
            else if (timeMin == 30 && times.length < 3) {
                var finishTime = times[1];
                var resFinishTime = addMinutes(finishTime, '30');
            }
            else if (timeMin == 60 && times.length < 2) {
                var finishTime = times[0];
                var resFinishTime = addMinutes(finishTime, '60');
            }
            else
                $.confirm({
                    title: "Uyarı",
                    content: "En fazla 1 Saatlik Rezervasyon Yapabilirsiniz.",
                    buttons: {
                        TAMAM: function () {

                        }
                    }
                });
        }

        var resobject = {

            ResDate: '',
            ResStartTime: '',
            ResFinishTime: '',
            ResEvent: '',
            userId: '',
            CourtId: '',
            ResTime: '',
        }

        resobject.ResStartTime = times[0];
        resobject.ResFinishTime = resFinishTime;

        resobject.ResDate = $("#dateInf").val();
        resobject.ResTime = time;
        resobject.userId = $("#userId").text();
        resobject.ResEvent = "event-1"
        resobject.CourtId = id;

        try {

            $.ajax({
                type: "POST",
                url: '../Public/NewReservation',
                cache: false,
                data: resobject,
                dataType: "json",
                async: true,
                success: function (res) {


                    if (res == true) {
                        $.confirm({
                            title: "Bilgilendirme",
                            content: "Rezervasyon Kaydınız Başarılı Bir Şekilde Gerçekleşti.",
                            buttons: {
                                TAMAM: function () {

                                    $('#rsvModal').modal('toggle');

                                    window.location.href = "Reservation?date=" + $('#timeNow').val();

                                }
                            }
                        });
                    }

                },
                error: function (textStatus, errorThrown) {
                    console.log(JSON.stringify(textStatus));
                    console.log(textStatus);
                }
            });
        } catch (e) {
            console.log(e.message);
        }

    }

    function WebReservation() {

        $.confirm({
            title: "Uyarı",
            content: "İnternet Üzerinden Rezervasyon Yetkiniz Bulunmamaktadır. İletişime Geçiniz.",
            buttons: {
                TAMAM: function () {

                }
            }
        });
    }


</script>
