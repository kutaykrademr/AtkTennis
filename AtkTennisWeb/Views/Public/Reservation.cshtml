                                        @{
                                            DateTime date1 = DateTime.Now;
                                            var date2 = date1.AddDays(1);
                                            var today = date1.ToString("yyyy-MM-dd");
                                            var tomorrow = date2.ToString("yyyy-MM-dd");
                                        }

