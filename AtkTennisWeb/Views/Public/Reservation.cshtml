        //                window.location.href = "Reservation"
        //            }
        //        }
        //    });
        //}

        $('#rsvModal').modal('toggle');
    }

    function getRes(time) {

        var date = new Date();



        if (time == "today") {
            var month = (date.getMonth() + 1);
            var day = date.getDate();
            if (month < 10)
                month = "0" + month;
            if (day < 10)
                day = "0" + day;
            var date3 = date.getFullYear() + '-' + month + '-' + day;
            $("#dateInf").val(date3);

            getCourtTime();


        } else if (time == "tomorrow") {
            date.setDate(date.getDate() + 1);
            var month = (date.getMonth() + 1);
            var day = date.getDate();
            if (month < 10)
                month = "0" + month;
            if (day < 10)
                day = "0" + day;
            var date2 = date.getFullYear() + '-' + month + '-' + day;

            $("#dateInf").val(date2);

            getCourtTime();

        }

    }

    function next() {

        var date = $("#dateInf").val();

        const d = new Date(date);
        d.setDate(d.getDate() + 1);

        var month = (d.getMonth() + 1);
        var day = d.getDate();
        if (month < 10)
            month = "0" + month;
        if (day < 10)
            day = "0" + day;

        var date3 = d.getFullYear() + '-' + month + '-' + day;
        $("#dateInf").val(date3);
        getCourtTime()
    }

    function pre() {

        var date = $("#dateInf").val();

        const d = new Date(date);
        d.setDate(d.getDate() - 1);

        var month = (d.getMonth() + 1);
        var day = d.getDate();
        if (month < 10)
            month = "0" + month;
        if (day < 10)
            day = "0" + day;
        var date4 = d.getFullYear() + '-' + month + '-' + day;

        $("#dateInf").val(date4);
        getCourtTime()

    }

    function getCourtTime() {

        var dt = new Date();
        var time = dt.getHours() + ":" + dt.getMinutes();

        var days = new Date($('#dateInf').val());
        var getday = days.getDay();

        var dd = String(dt.getDate()).padStart(2, '0');
        var mm = String(dt.getMonth() + 1).padStart(2, '0');
        var yyyy = dt.getFullYear();

        var today = yyyy + '-' + mm + '-' + dd;

        var courtInf = $("#selectCourt option:selected").text();

        var date = $("#dateInf").val();
        var b = date.split("-");
        var timeInf = b[2] + '-' + b[1] + '-' + b[0];


        if ($("#dateInf").val() < today) {

            $.confirm({
                title: "Uyarı",
                content: "Önceki Günlere Rezervasyon Yapamazsınız.",
                buttons: {
                    TAMAM: function () {

                        $("#dateInf").val(today)
                    }
                }
            });
        }

        else {

            $.ajax({
                type: "POST",
                url: '../Public/GetResTime',
                cache: false,
                data: { "dateInf": $("#dateInf").val(), courtInf, "timeMin": $("#resTimeMin").val() },
                dataType: "json",
                async: false,
                success: function (res) {

                    if (res == false) {

                        $.confirm({
                            title: "Bilgilendirme",
                            content: "Lütfen Kort Bilgisi ve/veya Tarih Giriniz.",
                            buttons: {
                                TAMAM: function () {

                                }
                            }
                        });
                    }

                    switch (getday) {
                        case 0:
                            day = "Pazar";
                            break;
                        case 1:
                            day = "Pazartesi";
                            break;
                        case 2:
                            day = "Salı";
                            break;
                        case 3:
                            day = "Çarşamba";
                            break;
                        case 4:
                            day = "Perşembe";
                            break;
                        case 5:
                            day = "Cuma";
                            break;
                        case 6:
                            day = "Cumartesi";
                    }

                    $("#CourtandTime").empty();
                    row = "";
                    row += '<div class="modal-header" style="background-color: #004e6c;">';
                    row += '<h4 style=" margin:auto; color:white"><i class="fas fa-flag nav-icon"></i>' + ' ' + courtInf + ' ' + ' - ' + ' ' + timeInf + ' ' + ' - ' + ' ' + day + ' ' + ':' + ' ' + '</h4>';
                    row += '</div>';
                    $("#CourtandTime").append(row);


                    if (res.length > 0) {

                        var timeMin = $("#resTimeMin").val();

                        if (timeMin == "60" || timeMin == "30" || timeMin == "15" ) {

                            $("#ResModal").empty();

                            for (var i = 0; i < res.length; i++) {

                                NewRow = "";
                                NewRow += '<div class="form-group">';
                                NewRow += '<div class="custom-control custom-checkbox" id="checkTimeTable">';

                                if (res[i].isTaken == true)

                                    NewRow += '<input class="custom-control-input custom-control-input-primary custom-control-input-outline" type="checkbox" id="customCheckbox5" checked="" disabled="">';

                                else if (res[i].start <= time && date == today)

                                    NewRow += '<input class="custom-control-input custom-control-input-primary custom-control-input-outline" type="checkbox" id="customCheckbox5" checked="" disabled="">';

                                else

                                    NewRow += '<input class="custom-control-input custom-control-input-danger" type="checkbox" id= "t_' + res[i].timeId + '" name= "' + res[i].start + '">';
                                NewRow += '<label for="t_' + res[i].timeId + '" class="custom-control-label">' + res[i].start + '</label>';
                                NewRow += '</div></div>';


                                $("#ResModal").append(NewRow);

                            }
                        }

                        else

                            $.confirm({
                                title: "Uyarı  ",
                                content: "Rezervasyon Ayarlarını Gözden Geçiriniz , Minimum Zaman Dilimi (Dakika)(15,30,60)",
                                buttons: {
                                    TAMAM: function () {

                                    }
                                }
                            });
                    }
                },


                error: function (textStatus, errorThrown) {
                    console.log(JSON.stringify(textStatus));
