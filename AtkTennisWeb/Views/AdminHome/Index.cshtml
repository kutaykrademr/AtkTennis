                                                            <div style="background-color:#1bbc27!important;color:#ffffff!important;">
                                                                <a style="padding:0;color:#fff;">
                                                                    @res.NickName

                                                                </a>
                                                            </div>
                                                            <div style="position: relative;height:3px;background-color:#e61a1a"></div>
                                                        </td>

                                                        i = i + 3;
                                                    }

