    function cancelResAuthorized(id) {

        var userId = $("#userId").text();
        var procedure = false;
        var cancelReasons = $("#reasonCancel option:selected").text();


        if ($("#checkProcedure").is(":checked")) {
             procedure = true;
        }

        swal({
            title: "Emin Misiniz?",
            text: "Rezervasyon  İptal Edilecek !",
            icon: "warning",
            buttons: true,
            dangerMode: true,
