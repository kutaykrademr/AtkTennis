        }],

        colors: ['#7CB342', '#558B2F'],

        chart: {
            type: 'bar',
            height: 330,


        },
        plotOptions: {
            bar: {
                horizontal: false,
                columnWidth: '50%',
                endingShape: 'rounded',
            },
        },
        dataLabels: {
            enabled: false
        },
        stroke: {
            show: true,
            width: 2,
            colors: ['transparent']
        },
        xaxis: {
            categories: ['2021', '2022', '2023'],
        },
        yaxis: {
            title: {
                text: 'Yıllara Ait Aidat Borc İstatistik'
