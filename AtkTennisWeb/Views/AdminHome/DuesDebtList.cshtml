        },
        fill: {
            opacity: 1
        },
        tooltip: {
            y: {
                formatter: function (val) {
                    return val + "₺"
                }
            }
        }
    };

    var chart = new ApexCharts(document.querySelector("#barChart2"), options);
    chart.render();


</script>

